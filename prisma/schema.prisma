generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Gift {
  id              String   @id @default(cuid())
  slug            String   @unique
  title           String
  strapline       String
  description     String
  ledByName       String
  ledByRole       String
  durationMinutes Int?
  format          String?
  sortOrder       Int      @default(0)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Client {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  companyName    String
  email          String
  token          String   @unique
  selectedGiftId String?
  selectedGift   Gift?    @relation(fields: [selectedGiftId], references: [id])
  selectedAt     DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

